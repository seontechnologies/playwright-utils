{
  "name": "playwright-utils",
  "version": "1.0.0",
  "description": "A collection of utilities for Playwright.",
  "author": "Murat Ozcan",
  "license": "ISC",
  "main": "dist/playwright-utils.js",
  "types": "dist/playwright-utils.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://github.com/seontechnologies/playwright-utils#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/seontechnologies/playwright-utils.git"
  },
  "bugs": {
    "url": "https://github.com/seontechnologies/playwright-utils/issues"
  },
  "keywords": [
    "playwright",
    "utils"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig-build.json",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|ts|json)\"",
    "fix:format": "npm run prettier -- --write",
    "validate": "npm-run-all --parallel typecheck lint test fix:format",
    "test": "jest --detectOpenHandles --verbose --silent --config jest.config.ts",
    "test:watch": "jest --watch --config jest.config.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint --ext=.js,.ts,.tsx --fix",
    "test:pw": "TEST_ENV=dev npx playwright test",
    "test:pw-ui": "TEST_ENV=dev npx playwright test --ui"
  },
  "devDependencies": {
    "@faker-js/faker": "9.6.0",
    "@playwright/test": "^1.51.1",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.16",
    "@types/node": "22.13.13",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "8.28.0",
    "dotenv": "16.4.7",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.2.3",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-implicit-dependencies": "1.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-prettier": "5.2.5",
    "jest": "29.7.0",
    "lodash": "4.17.21",
    "npm-run-all2": "7.0.2",
    "prettier": "3.5.3",
    "ts-jest": "29.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "5.8.2"
  }
}
