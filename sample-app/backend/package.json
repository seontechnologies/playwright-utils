{
  "name": "sample-app-backend",
  "version": "1.0.0",
  "description": "Sample backend for testing playwright-utils",
  "main": "index.js",
  "private": true,
  "author": "Murat Ozcan",
  "license": "ISC",
  "scripts": {
    "test": "jest --detectOpenHandles --verbose --silent --config jest.config.ts",
    "test:watch": "jest --watch --config jest.config.ts",
    "db:migrate": "npx prisma migrate reset --force --skip-seed generate",
    "db:sync": "npx prisma db push --force-reset && npx prisma generate",
    "db:migrate-prod": "npx prisma migrate deploy",
    "reset:db": "tsx ./scripts/global-setup.ts",
    "kafka:health-check": "node ./scripts/kafka-health-check.js",
    "start": ". ./scripts/env-setup.sh && npm run kafka:health-check && npm run db:sync && npm run reset:db && npm run kafka:reset-logs && nodemon",
    "kafka:reset-logs": "rm -rf test-events/movie-events.log",
    "kafka:start": "docker compose -f ./src/events/kafka-cluster.yml up -d --no-recreate",
    "kafka:stop": "docker compose -f ./src/events/kafka-cluster.yml down",
    "generate:openapi": "tsx src/api-docs/openapi-writer.ts",
    "generate:api-docs": "rm -rf docs && npx redocly build-docs src/api-docs/openapi.yml -o docs/api-docs.html"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.3",
    "@seontechnologies/playwright-utils": "*",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "cors": "2.8.5",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "3.1.10",
    "openapi-types": "^12.1.3"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.3",
    "@prisma/client": "6.9.0",
    "cookie-parser": "^1.4.7",
    "express": "4.21.2",
    "kafkajs": "2.2.4",
    "prisma": "6.9.0",
    "zod": "3.25.56"
  }
}
